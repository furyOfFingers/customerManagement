.container
  display flex
  flex-direction column

.day
  margin-right 10px
  border 1px solid #1890ff
  border-radius 6px
  width 100px
  padding 8px 12px
  color #1890ff
  cursor pointer
  text-align center
  transition all 0.2s ease-in-out;

.picked
  background-color #1890ff
  color #fff
  text-align center

.pickerContainer
  display flex
  align-items center
  margin-bottom 10px
  width 100%

.timePicker
  width 200px
