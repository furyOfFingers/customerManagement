.container
  position: fixed;
  z-index: 3;
  display flex
  border-bottom 2px solid #ccc
  width: 100%;
  height 50px
  padding 10px
  padding-left 20px
  background-color: white;

.containerShadow
  box-shadow: 1px 6px 6px 2px rgba(204,204,204,0.58);
  -webkit-box-shadow: 1px 6px 6px 2px rgba(204,204,204,0.58);
  -moz-box-shadow: 1px 6px 6px 2px rgba(204,204,204,0.58);

.spin
  position absolute
  top 10px
  right 50%

.avatar
  margin 0 10px

.username
  display flex
  align-items center