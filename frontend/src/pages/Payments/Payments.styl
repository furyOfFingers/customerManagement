.container
  display flex
  flex-direction row
  justify-content center
  & > button
    margin 0 auto 10px auto

.centered
  display flex
  justify-content center

.action_panel
  display flex
  justify-content flex-end
  align-items center
  margin-bottom 20px
  & > *:last-child
    margin-left 0.25rem

.icon
  font-size 1.25rem
  &:hover
    cursor pointer
    color rgb(24, 144, 255)

.form_container
  display flex
  flex-direction column
  align-items center
  margin-top 60px
  margin-right 1rem

.view {
  &_box {
    justify-content stretch
    flex-direction column
  }
}

